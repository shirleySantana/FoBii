<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chatapp.fovi.SignUpActivity"
    style="@style/AuthBackground"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/backgroundImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitEnd"
        android:src="@drawable/backgroundfobi"
        android:layout_alignParentStart="false" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/text_title"
        android:textSize="60sp"
        android:textColor="@color/primary_text"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:text="@string/text_subtitle"
        android:textSize="13sp"
        android:textColor="@android:color/white"
        />

    <LinearLayout
        android:id="@+id/editTextLayout"
        style="@style/AuthLinearStyle"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/activity_vertical_margin_large"
        android:layout_marginRight="@dimen/activity_vertical_margin_large">

        <EditText
            android:id="@+id/usernameField"
            android:hint="@string/username_hint"
            style="@style/EditTextStyle" />

        <EditText
            style="@style/EditTextStyle"

            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordField"
            android:hint="@string/password_hint"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <EditText
            style="@style/EditTextStyle"
            android:id="@+id/emailField"
            android:hint="@string/mail_hint"
    />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDivider"
        android:src="@drawable/button_divider"
        android:layout_below="@+id/editTextLayout"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/cancel_Button" />


    <Button
        android:text="@string/login_button_label"
        android:id="@+id/loginButton"
        android:onClick="onClickLogin"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/activity_vertical_margin_large"
        android:layout_toLeftOf="@+id/buttonDivider"
        style="@style/btnSignStyle" />

    <Button
        style="@style/btnSignStyle"

        android:text="@string/btn_cancel"
        android:id="@+id/cancel_Button"
        android:onClick="onClickCancel"
        android:layout_marginRight="@dimen/activity_vertical_margin_large"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/buttonDivider"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pbSignup"
        android:visibility="invisible"
        android:layout_below="@+id/buttonDivider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="139dp" />
</RelativeLayout>
